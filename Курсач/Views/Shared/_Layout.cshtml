<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-footable/3.0.6/footable.min.js"></script>
    <script>
        jQuery(function () {
            jQuery('.table').footable({
                calculateWidthOverride: function () {
                    return { width: jQuery(window).width() };
                },
                breakpoints: {
                    mobile: 480,
                    tablet: 720,
                    desktop: 1024
                }
            });
        })
    </script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        button:disabled
        {
            background-color:indianred;
        }
            button:disabled:hover {
                background: rgb(80,80,80);
            }
        .wrappertable {
            max-width: 100%;
            overflow: auto;
        }
        button, 
        .manage-button, 
        .manage-select,
        .page
        {
            display: inline-block;
            color: white;
            font-weight: 700;
            text-decoration: none;
            user-select: none;
            padding: .5em 2em;
            outline: none;
            border: 2px solid;
            border-radius: 1px;
            transition: 0.2s;
            background: rgb(80,80,80);
        }

            button:hover, .manage-button:hover {
                background: #808080;
            }
            button:active, .manage-button:active {
                background: white;
            }

        .table {
            border: solid #ccc 1px;
            border-radius: 6px;
            box-shadow: 0 1px 1px #ccc;
        }

            .table tr:hover {
                background: #fbf8e9;
                transition: all 0.1s ease-in-out;
            }

            .table td {
                border-left: 1px solid #ccc;
                border-top: 1px solid #ccc;
                padding: 10px;
                text-align: left;
            }

            .table th {
                background-color: #dce9f9;
                background-image: linear-gradient(top, #ebf3fc, #dce9f9);
                box-shadow: 0 1px 0 rgba(255,255,255,.8) inset;
                text-shadow: 0 1px 0 rgba(255,255,255,.5);
            }

        h1 {
            margin-bottom: 20px;
        }

        @@media (max-width: 900px) {
            .navbar-header {
                background: #EEE8AA url('../../Content/symbol.png') no-repeat 60% 60%
            }

            .footer {
                background-image: none !important;
                z-index:200;
            }
        }

        .navbar-inverse {
            background: #EEE8AA;
        }

            .navbar-inverse .navbar-brand,
            .navbar-inverse .navbar-nav > li > a {
                color: black;
                margin-right: -1px;
            }

            .navbar-inverse .navbar-nav > li > a {
                font-size: 1.2em;
            }

        html {
            height: 100%;
        }

        body {
            min-height: 100%;
            display: grid;
            grid-template-rows: 1fr auto;
            padding-bottom: 0;
            max-width:100%;
            z-index:-2;
        }

        .content {
            max-width: 100%;
            overflow: auto;
            padding-left: 5%;
            padding-right: 5%;
        }

        .footer {
            margin-top:5px;
            height: 60px;
            background: #EEE8AA url('../../Content/symbol.png') no-repeat 95% 60%;
            display: grid;
            text-align: center;
            padding-top: 5px;
            grid-row-gap: 5px;
            grid-template-columns: 1fr 1fr 1fr 1fr;
        }

            .footer > div {
                font-size: 12px;
                text-align: left;
                padding-left: 20px;
            }

        .footer-inf {
            line-height: 50px;
        }

        .navbar-inverse .navbar-brand:hover,
        .navbar-inverse .navbar-nav > li > a:hover {
            background: black !important;
        }

        .navbar-collapse {
            padding-left: 5%;
            padding-right: 5%;
        }

        @@media (max-width: 929px) {
            footer {
                height: 94px !important;
            }

            .footer-inf {
                line-height: normal;
            }
        }
    </style>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body id="lock">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Такси \"ComeOn\"", "Index", new { @controller = "Home" }, new { @class = "for-admin" })</li>
                <li>@Html.ActionLink("Заказ", User.Identity.IsAuthenticated ? "DoOrder" : "Login", new { @controller = User.Identity.IsAuthenticated ? "Home" : "Account" }, new { @class = "for-admin" })</li>
                <li>@Html.ActionLink("Тарификация", "Tariffing", "Home")</li>
                @if (User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Администрирование", "Modering", "Admin")</li>
                }
                @if (User.IsInRole("Driver"))
                {
                    <li>@Html.ActionLink("Для водителей", "Index", "Driver")</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div> 
    <div class="content">@RenderBody()</div>
    <footer class="footer">
        <div class="footer-inf">&copy;Сейчас бы такси заказывать в @DateTime.Now.Year</div>
        <div></div>
        <div>
            <span>Доп. информация:</span><br />
            <span>@Html.ActionLink("Тарификация", "Tariffing", new { @controller = "Home" })</span><br />
            <span> @Html.ActionLink("Контакты", "Contact", new { @controller = "Home" })</span>
        </div>
    </footer>
</body>
</html>
