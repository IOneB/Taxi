

@{
    ViewBag.Title = "Для Водителей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Заказы</h2>

<style>
    @@media (max-width:450px) {
        .content {
            padding-left:0;
        }
        .workspace{
            margin-left:0 !important;
            padding-left:0 !important;
        }
    }
    @@media (max-width: 1000px){
        .wrapper {
            grid-template-columns: 1fr !important;
            grid-template-rows:1fr 1fr;
        }
        #orders{
            border-bottom:1px solid white;
        }
        #map{
            margin-top:-30px !important;
        }
    }
    #orders{
        margin-top:10px;
        min-width:450px;
        max-height:500px;
        overflow:auto;
    }
    .wrapper {
        color: white;
        display: inline-grid;
        grid-gap: 20px;
        grid-template-columns:1fr 1fr;
        text-align: center;
        background: #000000db;
        border-radius: 2%;
        max-width:100%;
        overflow:auto;
    }
    #map {
        min-width: 95%;
        height: 560px;
        margin: 10px;
    }
    body {
        text-align: center;
    }
</style>


<body>
    <div class="wrapper">
        <div id="orders">
            @{ 
                    Html.RenderAction("FreeOrdersPartial");
            }
        </div>
        <div id="supermap">
            @{
                Html.RenderAction("SuperMap");
            }
        </div>
    </div>
</body>
